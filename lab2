#!/usr/bin/env python3

import sys

def print_variables(arg1, arg2):
    script_name = sys.argv[0]  # Get the script name
    print(f"Script Name: {script_name}")
    print(f"Variable 1: {arg1}")
    print(f"Variable 2: {arg2}")

if __name__ == "__main__":
    if len(sys.argv) < 3:
        print("This script requires at least 2 arguments.")
    else:       
        print_variables(sys.argv[1], sys.argv[2])
